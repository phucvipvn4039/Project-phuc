@model  Ban
@{
    QLNhaHangEntities db = new QLNhaHangEntities();
}

<div class="panel panel-primary">
    <div class="panel-heading">@(Model.BanID == 0 ? "Thêm mới bàn" : "Cập nhật thông tin bàn")</div>
    <div class="panel-body">
        <form style="margin-top:20px;display:inline-block" class="col-xs-12" method="post" enctype="multipart/form-data" action="@Url.Action("capnhat", "Ban", new { area = "" })">

            <input type="hidden" name="BanID" value="@Model.BanID" />
            <div class="form-group col-xs-12">
                <label>Tên bàn:</label>
                <input type="text" class="col-xs-12 form-control" required name="TenBan" value="@Model.TenBan" />
            </div>
            <div class="form-group col-xs-6">
                <label style="width:100%">Khu vực:</label>
                <select class="form-control" name="KhuVucID">
                    @foreach (var item in db.KhuVucs)
                    {
                        <option value="@item.KhuVucID">@item.TenKhuVuc</option>
                    }
                </select>


            </div> 
            <div class="form-group col-xs-6">
                <label>Trạng thái:</label>
                <select name="TrangThai" class="form-control">
                    <option value="">Chưa xác định</option>
                    <option @(Model.TrangThai == 0 ? "selected" : "") value="0">Trống</option>
                    <option @(Model.TrangThai == 1 ? "selected" : "") value="1">Có Người</option>
                </select>
            </div>

            <div class="col-xs-12" style="margin:20px">
                <input class="pull-right btn btn-success" type="submit" value="Lưu thông tin" />

            </div>
        </form>
    </div>
</div>
